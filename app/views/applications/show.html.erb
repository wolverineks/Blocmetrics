<h1><%= @application.name %></h1>

<p><%= @application.url %></p>

<% @events.each_with_index do |event, i| %>
<p><%= i + 1 %>. <%= event[0] %> - <%= event.count - 1 %></p>
<% end %>

<%= link_to "Edit", edit_application_path, class: 'btn btn-success'  %>
<%= link_to "Delete", application_path, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this application?'}  %>